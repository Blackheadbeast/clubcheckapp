generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Owner {
  id                      String          @id @default(uuid())
  email                   String          @unique
  password                String
  createdAt               DateTime        @default(now())
  stripeCustomerId        String?
  stripeSubscriptionId    String?
  subscriptionStatus      String?
  currentPeriodEnd        DateTime?
  planType                String          @default("starter")
  trialEndsAt             DateTime?
  emailVerified           DateTime?
  phone                   String?
  verificationToken       String?         @unique
  verificationTokenExpiry DateTime?
  provider                String?
  providerAccountId       String?
  gymCode                 String?         @unique
  auditLogs               AuditLog[]
  billingEvents           BillingEvent[]
  checkins                Checkin[]
  feedback                Feedback[]
  gymProfile              GymProfile?
  invoiceRecords          InvoiceRecord[]
  members                 Member[]
  paymentRecords          PaymentRecord[]
  prospects               Prospect[]
  referral                Referral?
  staff                   Staff[]
}

model GymProfile {
  id                   String    @id @default(uuid())
  name                 String?
  address              String?
  logoUrl              String?
  kioskPinHash         String?
  billingMode          String    @default("stripe")
  externalProviderName String?
  billingContactEmail  String?
  freeUntil            DateTime?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  ownerId              String    @unique
  setupDismissedAt     DateTime?
  waiverEnabled        Boolean   @default(false)
  waiverText           String?
  theme                String    @default("dark")
  walkthroughCompletedAt DateTime?
  reminderDaysBefore     Int       @default(3)
  owner                Owner     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
}

model Member {
  id                   String          @id @default(uuid())
  name                 String
  email                String
  phone                String?
  status               String          @default("active")
  qrCode               String          @unique
  createdAt            DateTime        @default(now())
  ownerId              String
  stripeCustomerId     String?
  stripeSubscriptionId String?
  subscriptionStatus   String?
  cardLast4            String?
  cardExpiryMonth      Int?
  cardExpiryYear       Int?
  lastCheckInAt        DateTime?
  waiverSignature      String?
  waiverSignedAt       DateTime?
  accessToken          String?         @unique
  accessTokenExpiry    DateTime?
  currentStreak        Int             @default(0)
  lastStreakCheckDate  DateTime?
  longestStreak        Int             @default(0)
  monthlyFeeCents      Int?
  billingDayOfMonth    Int?
  paymentMethod        String?
  billingEnabled       Boolean         @default(false)
  lastReminderSentAt   DateTime?
  lastPaidAt           DateTime?
  paymentLink          String?
  checkins             Checkin[]
  owner                Owner           @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  paymentRecords       PaymentRecord[]

  @@index([ownerId, status])
  @@index([ownerId, createdAt])
  @@index([ownerId, billingEnabled])
  @@index([phone])
}

model Checkin {
  id         String   @id @default(uuid())
  timestamp  DateTime @default(now())
  memberId   String
  ownerId    String
  deviceName String?
  source     String?
  member     Member   @relation(fields: [memberId], references: [id], onDelete: Cascade)
  owner      Owner    @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  @@index([ownerId, timestamp])
  @@index([memberId, timestamp])
}

model PaymentRecord {
  id          String   @id @default(uuid())
  amountCents Int
  currency    String   @default("usd")
  paidAt      DateTime @default(now())
  method      String
  note        String?
  ownerId     String
  memberId    String?
  member      Member?  @relation(fields: [memberId], references: [id])
  owner       Owner    @relation(fields: [ownerId], references: [id], onDelete: Cascade)
}

model BillingEvent {
  id         String    @id @default(uuid())
  type       String
  message    String
  createdAt  DateTime  @default(now())
  resolvedAt DateTime?
  ownerId    String
  owner      Owner     @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  @@index([ownerId, createdAt])
}

model InvoiceRecord {
  id              String   @id @default(uuid())
  type            String
  stripeInvoiceId String?  @unique
  amountCents     Int
  status          String
  pdfUrl          String?
  hostedUrl       String?
  createdAt       DateTime @default(now())
  ownerId         String
  owner           Owner    @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  @@index([ownerId, createdAt])
}

model Referral {
  id                String   @id @default(uuid())
  referralCode      String   @unique
  referredByOwnerId String?
  referredAt        DateTime @default(now())
  creditedMonths    Int      @default(0)
  ownerId           String   @unique
  owner             Owner    @relation(fields: [ownerId], references: [id], onDelete: Cascade)
}

model Prospect {
  id                String    @id @default(uuid())
  name              String
  email             String
  phone             String?
  status            String    @default("new")
  source            String?
  notes             String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  contactedAt       DateTime?
  touredAt          DateTime?
  convertedAt       DateTime?
  ownerId           String
  convertedMemberId String?
  owner             Owner     @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  @@index([ownerId, status])
  @@index([ownerId, createdAt])
}

model Staff {
  id          String    @id @default(uuid())
  name        String
  email       String
  password    String
  role        String    @default("front_desk")
  active      Boolean   @default(true)
  createdAt   DateTime  @default(now())
  lastLoginAt DateTime?
  ownerId     String
  owner       Owner     @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  @@unique([email, ownerId])
}

model Feedback {
  id        String   @id @default(uuid())
  rating    Int
  message   String?
  createdAt DateTime @default(now())
  ownerId   String
  owner     Owner    @relation(fields: [ownerId], references: [id], onDelete: Cascade)
}

model AuditLog {
  id          String   @id @default(uuid())
  action      String
  description String
  ipAddress   String?
  userAgent   String?
  metadata    String?
  createdAt   DateTime @default(now())
  actorType   String
  actorId     String
  actorEmail  String?
  ownerId     String
  owner       Owner    @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  @@index([ownerId, createdAt])
  @@index([action])
}
